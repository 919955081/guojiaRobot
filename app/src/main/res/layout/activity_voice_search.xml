<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    tools:context="com.guojia.robot.activity.VoiceSearchActivity">
    <include layout="@layout/mode_top_bar_layout"/>
    <RelativeLayout
        android:layout_below="@+id/mode_top_bar"
        android:layout_toLeftOf="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        >
        <TextView
            android:id="@+id/search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年理综"
            android:textSize="25sp"
            android:textColor="#CCCCCC"
            />


    </RelativeLayout>
    <View
        android:layout_below="@+id/mode_top_bar"
        android:id="@+id/view1"
        android:layout_width="0.5dp"
        android:paddingBottom="40dp"
        android:paddingTop="40dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="#454545"/>
    <LinearLayout
        android:layout_below="@+id/mode_top_bar"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        >

        <ImageView
            android:id="@+id/voice_search_iv"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:background="@mipmap/voice_search_pic" />
        <TextView
            android:id="@+id/voice_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没听清"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="试试理科综合高考题"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#CCCCCC"
            />
    </LinearLayout>
</RelativeLayout>
