<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:background="@mipmap/main_vp_item_bg"
    android:layout_width="318dp"
    android:layout_height="428dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
<ImageView
    android:id="@+id/vp_item_flag_pic"
    android:layout_width="62dp"
    android:layout_height="62dp"
    android:background="@mipmap/vp_item_flag_pk"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/imageView2"
    android:layout_toStartOf="@+id/imageView2"
    android:layout_marginTop="48dp" />
    
    <ImageView
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:background="@mipmap/vp_item_yuan"
        android:layout_centerInParent="true"
        android:id="@+id/imageView2" />
    <ImageView
        android:id="@+id/vp_item_text"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:background="@mipmap/vp_item_pk_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    
    <Button
        android:id="@+id/vp_item_btn"
        android:layout_width="112dp"
        android:layout_height="45dp"
        android:padding="10dp"
        android:text="立即挑战"
        android:textColor="@color/white"
        android:background="@drawable/main_vp_item_button_shape"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />
</RelativeLayout></RelativeLayout>