<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_top_title_bar"
        android:background="@color/main_title_bar_color"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/main_user_title_layout"
            android:layout_centerVertical="true"
            android:background="@drawable/main_user_title_bar_shape"
            android:layout_width="220dp"
            android:layout_marginLeft="10dp"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/main_user_head_pic"
                android:background="@mipmap/main_user_head_pic"
                android:layout_width="36dp"
                android:layout_height="36dp" />
            <TextView
                android:id="@+id/main_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/main_user_head_pic"
                android:layout_marginLeft="5dp"
                android:textColor="@color/user_name_color"
                android:textSize="@dimen/main_title_top_textsize"
                android:text="@string/main_title_user_name"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/main_user_flag_pic"
                android:id="@+id/main_user_flag_pic"
                />
            <TextView
                android:id="@+id/main_user_flag_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/main_user_flag_pic"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/main_title_top_textsize"
                android:textColor="@color/black"
                android:text="@string/main_user_flag_name"
                />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/main_subject_layout"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/main_user_title_layout"
            >
            <TextView
                android:id="@+id/subject_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/main_title_top_textsize"
                android:text="@string/main_subject"
                />
            <ImageView
                android:background="@mipmap/main_choice_down"
                android:layout_marginLeft="5dp"
                android:layout_width="18dp"
                android:layout_height="18dp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_centerVertical="true"
            android:background="@drawable/main_search_title_bar_shape"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:id="@+id/main_search_layout"
            android:layout_width="235dp"
            android:layout_height="35dp">
            <ImageView
                android:background="@mipmap/main_search_icon"
                android:layout_centerVertical="true"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <ImageView
                android:id="@+id/main_search_voice"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@mipmap/login_voice"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/main_search_qr_iv"
            android:layout_toLeftOf="@+id/main_search_layout"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/main_search_two_qr"
            android:layout_width="35dp"
            android:layout_height="35dp" />
    </RelativeLayout>