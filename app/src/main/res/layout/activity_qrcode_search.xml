<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guojia.robot.activity.QRSearchActivity">
    <include layout="@layout/mode_top_bar_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <SurfaceView
            android:id="@+id/qr_camera_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/qr_search_pic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/qr_search_pic"
            />
    </RelativeLayout>
    <RelativeLayout
        android:background="#DADADA"
        android:layout_width="match_parent"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_height="120dp">
        <LinearLayout
            android:id="@+id/qr_search_word_layout"
            android:layout_width="80dp"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            >

            <ImageView
                android:layout_width="@dimen/qr_search_iv_size"
                android:layout_height="@dimen/qr_search_iv_size"
                android:background="@mipmap/qr_search_bottom_pic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize"
                android:text="查单词"
                android:textColor="#333333"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qr_search_ques_layout"
            android:layout_width="80dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            >

            <ImageView
                android:layout_width="@dimen/qr_search_iv_size"
                android:layout_height="@dimen/qr_search_iv_size"
                android:background="@mipmap/qr_search_bottom_pic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize"
                android:text="查题"
                android:textColor="#333333"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qr_search_who_layout"
            android:layout_width="80dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            >

            <ImageView
                android:layout_width="@dimen/qr_search_iv_size"
                android:layout_height="@dimen/qr_search_iv_size"
                android:background="@mipmap/qr_search_bottom_pic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize"
                android:text="查单词"
                android:textColor="#333333"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
