<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guojia.robot.activity.FaceSetActivity"
    android:orientation="vertical">
    <include layout="@layout/mode_top_bar_layout"/>
    <RelativeLayout
        android:id="@+id/set_face_msg_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>
    <Button
        android:id="@+id/add_face"
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:text="@string/add_face"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/person_btn_shape"
        />
</LinearLayout>
